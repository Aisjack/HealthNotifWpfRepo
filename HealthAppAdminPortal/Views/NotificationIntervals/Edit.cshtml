@model HealthAppAdminPortal.Models.NotificationInterval

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Notification Interval</h1>

<hr />
<div class="row md-4">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="IntervalTime" class="control-label"></label>
                <input asp-for="IntervalTime" class="form-control" />
                <span asp-validation-for="IntervalTime" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-2">
    <a asp-controller="Notification" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
