@model Notification
@{
}
<h1>Create New Notification</h1>
<form asp-controller="Notification" asp-action="Create" class="mb-3">
    <div class="form-group">
        <input type="hidden" asp-for="Id">
    </div>
    <div class="form-group mb-2">
        <label asp-for="NotificationText" class="control-label">Notification Text</label>
        <input asp-for="NotificationText" class="form-control">
        <span asp-validation-for="NotificationText" class="text-danger"></span>
    </div>
    <div class="form-group mb-2">
        <label asp-for="NotificationUrl" class="control-label"></label>
        <input asp-for="NotificationUrl" class="form-control">
        <span asp-validation-for="NotificationUrl" class="text-danger"></span>
    </div>
    <div class="form-check form-switch mb-3">
        <input class="form-check-input" type="checkbox" asp-for="UrlActive">
        <label class="form-check-label" asp-for="UrlActive">Check switch to activate Notification</label>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
<a asp-controller="Notification" asp-action="Index">Back to Notification List</a>

