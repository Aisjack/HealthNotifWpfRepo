@model IList<Notification>
@{
}

<div class="d-flex justify-content-between">
    <div class="mb-3">
        <a class="btn btn-primary" asp-controller="Notification" asp-action="Create">Create New Notification Data</a>
    </div>

    <div class="mb-3">
        <a class="btn btn-primary" asp-controller="NotificationIntervals" asp-action="Edit" asp-route-Id="1">Notification Interval Setting</a>
    </div>
</div>

<div class="mt-3">
    <table class="table table-sm">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Notification Text</th>
                <th scope="col">Url</th>
                <th scope="col"> </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.NotificationText</td>
                    <td>
                        <a href="https://@item.NotificationUrl" target="_blank">@item.NotificationUrl</a>

                </td>
                    <td>
                        <a class="btn btn-primary" asp-controller="Notification" asp-action="Edit" asp-route-Id="@item.Id">Edit</a>
                        <a class="btn btn-danger" asp-controller="Notification" asp-action="Delete" asp-route-Id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
